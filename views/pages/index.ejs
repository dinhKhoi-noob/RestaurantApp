<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="shortcut icon" href="/images/icons/logo.jpg" />
    <link
      rel="stylesheet"
      href="/vendor/icons-1.5.0/build/bootstrap-icon.css"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="/vendors/jquery-ui-1.13.0-rc.2/jquery-ui.min.css"
    />
    <title>Ecommerce</title>
  </head>

  <body>
    <div class="order-list-btn-section">
      <button class="show-order-list-btn" id="show-order-list-btn">
        <i class="fas fa-clipboard-list"></i>
      </button>
      <div class="btn-tooltip" id="order-list-btn-tooltip">Open order list</div>
    </div>
    <div class="order-list-btn-section bottom-50">
      <button class="show-order-list-btn" id="scroll-to-top-btn">
        <i class="fas fa-arrow-up"></i>
      </button>
      <div class="btn-tooltip" id="scroll-top-btn-tooltip">Scroll to top</div>
    </div>
    <div class="container">
      <%- include('../libs/layouts/navigationBar.ejs') %> <%-
      include('../libs/layouts/notificationToast.ejs') %> <%-
      include('../libs/layouts/header.ejs') %> <%-
      include('../libs/layouts/orderDishToast.ejs') %> <%-
      include("../libs/homepage/categoryList.ejs",{categories:data.categories})
      %> <%- include('../libs/homepage/introduction.ejs') %>
      <div class="body">
        <%- include('../libs/homepage/services.ejs') %> <%-
        include('../libs/homepage/recipesList.ejs') %> <%-
        include('../libs/homepage/bookTable.ejs') %> <%-
        include('../libs/homepage/saleSection.ejs',{products:data.discountingProducts})
        %>
        <div class="dishes-title">Main dishes</div>
        <%- include('../libs/homepage/menu.ejs',{type:'breakfast'}) %> <%-
        include('../libs/homepage/menu.ejs',{type:'lunch'}) %> <%-
        include('../libs/homepage/menu.ejs',{type:'dinner'}) %> <%-
        include('../libs/homepage/productViewSection.ejs') %>
      </div>
      <div class="new-products-list"></div>
      <div class="tags-list"></div>
      <%- include('../libs/layouts/footer.ejs') %>
    </div>
    <script type="text/javascript" src="/js/jquery-3.6.0.min.js"></script>
    <script
      type="text/javascript"
      src="/vendors/jquery-ui-1.13.0-rc.2/jquery-ui.min.js"
    ></script>
    <script src="/js/setExpiredCookie.js"></script>
    <script src="/js/notificationToast.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/orderList.js"></script>
    <script src="/js/slideshow.js"></script>
    <script src="/js/searchDish.js" type="text/javascript"></script>
  </body>
</html>
