<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="shortcut icon" href="/images/icons/logo.jpg" />
    <link
      rel="stylesheet"
      href="/vendor/icons-1.5.0/build/bootstrap-icon.css"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="/vendors/jquery-ui-1.13.0-rc.2/jquery-ui.min.css"
    />
    <title>Checkout</title>
  </head>
  <body>
    <%- include('../libs/layouts/notificationToast.ejs') %>
    <div class="order-list-btn-section">
      <button class="show-order-list-btn" id="show-order-list-btn">
        <i class="fas fa-clipboard-list"></i>
      </button>
      <div class="btn-tooltip" id="order-list-btn-tooltip">Open order list</div>
    </div>
    <div class="order-list-btn-section bottom-50">
      <button class="show-order-list-btn" id="scroll-to-top-btn">
        <i class="fas fa-arrow-up"></i>
      </button>
      <div class="btn-tooltip" id="scroll-top-btn-tooltip">Scroll to top</div>
    </div>
    <div class="container">
      <%- include('../libs/layouts/navigationBar.ejs') %> <%-
      include('../libs/layouts/header.ejs',{categories:data.categories}) %>
      <div class="checkout-body">
        <%- include('../libs/checkout/orderItemList.ejs') %> <%-
        include('../libs/checkout/payment.ejs') %>
      </div>
      <%- include('../libs/layouts/footer.ejs') %>
      <!-- <%if(data && data.user_info){%>
            <strong>
                <%=data.user_info[0].email%>
            </strong>
        <%}%> -->
    </div>
    <script type="text/javascript" src="/js/jquery-3.6.0.min.js"></script>
    <script
      type="text/javascript"
      src="/vendors/jquery-ui-1.13.0-rc.2/jquery-ui.min.js"
    ></script>
    <script src="/js/orderList.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/renderCheckoutDishes.js"></script>
    <script src="/js/searchDish.js" type="text/javascript"></script>
  </body>
</html>
